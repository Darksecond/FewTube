<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimal-ui">

  <meta name="video-dash" content="/api/dash/{{id}}.mpd">

  <title>{{title}} - FEWTUBE</title>

  <script src="/shaka-player.ui-3.0.10.js"></script>
  <script src="/player.js"></script>
  
  <link rel="stylesheet" href="/normalize.css">
  <link rel="stylesheet" href="/milligram.css">
  <link rel="stylesheet" href="/controls-3.0.10.css">
  <link rel="stylesheet" href="/main.css" />
</head>

<body>

  <nav class="navigation">
    <section class="container">
      <a href="/feed">FEWTUBE</a>
    </section>
  </nav>

  <section class="container">
    <div data-shaka-player-container class="video-container">
      <video data-shaka-player playsinline id="video" poster="{{poster}}" src="/api/dash/{{id}}.mpd"></video>
    </div>
    <hr />
    <h3>{{title}}</h3>
    <h4><a href="{{channel.url}}">{{channel.name}}</a></h4>
    <div class="row">
      <div class="column column-66">
        <p>{{{description}}}</p>
      </div>
      <div class="column column-33">
        <h4>RELATED</h4>
        {{#related}}
        <div class="related-video">
          <div class="title"><a href="/watch/{{id}}">{{title}}</a> <a href="/channel/{{author.id}}" class="channel">{{author.name}}</a></div>

        </div>
        {{/related}}
      </div>
    </div>
    
  </section>


</body>

</html>